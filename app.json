{
  "expo": {
    "name": "Speak to Translator",
    "slug": "hltransslater",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hltransslater",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/app_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hltransslater.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "此应用需要访问麦克风以进行语音翻译功能",
        "NSCameraUsageDescription": "此应用需要访问相机以进行文字识别和翻译功能",
        "NSPhotoLibraryUsageDescription": "此应用需要访问相册以保存翻译结果",
        "NSPhotoLibraryAddUsageDescription": "此应用需要访问相册以保存翻译结果"
      }
    },
    "android": {
      "package": "com.hltransslater.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#00000000"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.WRITE_MEDIA_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "允许访问麦克风以进行语音翻译"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "此应用需要访问相册以保存翻译结果",
          "savePhotosPermission": "此应用需要访问相册以保存翻译结果",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "此应用需要访问相机以进行实时文字识别和翻译功能"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
